--- a/configure.ac
+++ b/configure.ac
@@ -12787,6 +12787,9 @@ fi
 AC_SUBST(MPL_SUBSET)
 
 
+CDEFAULTOPT=`echo $CFLAGS 2>/dev/null | grep -E -o "\-O[[0-3]]"`
