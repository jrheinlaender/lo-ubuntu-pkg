+
+    if (format_string != NULL)
+    {
+        va_list ap;
+
+        va_start (ap, format_string);
+        value = g_variant_new_va (format_string, NULL, &ap);
+        va_end (ap);
+    }
+    else
+        value = NULL;
+
+    g_lo_menu_item_set_attribute_value (menu_item, attribute, value);
+}
+
+void
+g_lo_menu_item_set_link (GLOMenuItem *menu_item,
+                         const gchar *link,
