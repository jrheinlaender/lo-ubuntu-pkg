+static void
+g_lo_action_group_finalize (GObject *object)
+{
+    GLOActionGroup *loGroup = G_LO_ACTION_GROUP (object);
+
+    g_hash_table_unref (loGroup->priv->table);
+
+    G_OBJECT_CLASS (g_lo_action_group_parent_class)->finalize (object);
+}
