+GLOMenuItem *
+g_lo_menu_item_new_submenu (const gchar *label,
+                            GMenuModel  *submenu)
+{
+    GLOMenuItem *menu_item;
+
+    menu_item = G_LO_MENU_ITEM( g_object_new (G_TYPE_LO_MENU_ITEM, NULL) );
