	# compress manpages
	find $(PKGDIR)-common -type f -name "*.1" | xargs gzip -9

ifneq "$(HELPISO)" ""
	# fix permisson
	chmod ugo-x $(PKGDIR)-common/$(OODIR)/program/hid.lst
